<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainMenuSectionsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- BIENVENIDO -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome"
            android:contentDescription="Welcome image"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="false"
            android:text="Â¡Bienvenido a la app!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"/>


        <!-- NOVEDADES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Novedades"/>
        <com.nperezlmendoza.practica2.views.NonScrollListView
            android:id="@+id/mainMenuNovedades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- OFERTAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Ofertas"/>
        <com.nperezlmendoza.practica2.views.NonScrollListView
            android:id="@+id/mainMenuOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- PS4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="PS4"/>
        <com.nperezlmendoza.practica2.views.NonScrollListView
            android:id="@+id/mainMenuPS4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- XBOX -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="XBox"/>
        <com.nperezlmendoza.practica2.views.NonScrollListView
            android:id="@+id/mainMenuXBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>